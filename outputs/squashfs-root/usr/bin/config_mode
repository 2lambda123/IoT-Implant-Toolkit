#!/bin/sh
logger "stat_points_none spk_wifi_set=1"
rm -f /data/status/mibt_bind_done
rm -f /data/wifi/wpa_supplicant.conf
rm -f /data/status/dhcp_done
rm -f /data/status/miio_done
#equipment binding information exists,
#disconnect wireless to ensure that the device is in a stop service state
/usr/bin/mphelper pause
amixer sset mysoftvol 200
sleep 1
/usr/bin/mphelper tone /usr/share/sound/enter_config_mode.mp3
/etc/init.d/bluetooth restart
/etc/init.d/wireless restart
/etc/init.d/miio restart
#pause first, mediaplayer required


